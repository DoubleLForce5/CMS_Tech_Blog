<div class="text-center">
  <h2>{{title}}</h2>
  <p>{{content}}</p>
  <p>Created by {{user.username}} on {{format_date date_created}}</p>
  <form class="form new-post-form" 
 
  >
      <div class="form-group">
        <label for="post-content">Comment:</label>
        <textarea class="form-input" id="comment-content" name="post-content"></textarea>
      </div>
      <div class="form-group">
        <button id="commentBtn" class="btn btn-primary">Add Comment</button>
      </div>
  </form>
{{#each comment}}
  <p>
     {{content}} on {{format_date date_created}}
  </p>
  {{/each}}
</div>

